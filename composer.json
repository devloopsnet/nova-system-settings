{
    "name": "devloops/nova-system-settings",
    "description": "A Laravel Nova tool which provides the ability to define your system settings in a beautiful UI and code implementation.",
    "keywords": [
        "laravel",
        "nova",
        "settings",
        "system",
        "system settings",
        "settings tool",
        "laravel tool",
        "laravel settings",
        "laravel nova settings"
    ],
    "authors": [
        {
            "name": "Abdullah Al-Faqeir",
            "email": "abdullah@devloops.net",
            "role": "Author"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "spatie/laravel-settings": "^3.3",
        "laravel/nova": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Devloops\\NovaSystemSettings\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Devloops\\NovaSystemSettings\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
